{
    "manifest_version": 3,
    "name": "LeetCode Helper",
    "version": "2.0",
    "description": "AI-powered hints and feedback for LeetCode problems",

    "permissions": [
        "activeTab",
        "storage",
        "identity"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*",
                "https://www.leetcode.com/problems/*"
            ],
            "js": ["content.js"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    },

    "host_permissions": [
        "https://leetcode.com/*",
        "http://localhost:8000/*",
        "http://127.0.0.1:8000/*"
    ]
}
